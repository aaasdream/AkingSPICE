{
  "name": "@akingspice/core",
  "version": "2.0.0-alpha.1",
  "description": "AkingSPICE - Modern MNA-based Circuit Simulator (No MCP)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "tsc",
    "build:demo": "tsc buck_converter_demo.ts --outDir dist --target ES2022 --module commonjs --moduleResolution node --esModuleInterop --downlevelIteration && ren dist\\buck_converter_demo.js buck_converter_demo.cjs",
    "demo": "node dist/buck_converter_demo.cjs",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx}",
    "docs": "typedoc src/index.ts",
    "benchmark": "node benchmarks/run.js",
    "test:all": "node test-runner.js",
    "test:quick": "node test-runner.js --quick",
    "test:verbose": "node test-runner.js --verbose",
    "test:report": "node test-runner.js --report test-report.json",
    "test:spice": "node test-runner.js --category algorithms,validation --verbose",
    "test:core": "node test-runner.js --category algorithms --report spice-core-report.json",
    "test:benchmark": "node test-runner.js --category validation --report spice-benchmark-report.json",
    "validate": "node test-runner.js --quick --report validation-report.json",
    "validate:spice": "node test-runner.js --category algorithms,validation --report spice-validation-report.json",
    "build:klu": "cd wasm && ./build_klu_wasm.sh",
    "build:klu:win": "cd wasm && build_klu_wasm.bat",
    "test:klu": "node examples/klu_wasm_test.js",
    "clean:klu": "cd wasm && ./build_klu_wasm.sh --clean"
  },
  "keywords": [
    "spice",
    "circuit-simulation",
    "power-electronics",
    "mna",
    "event-driven",
    "typescript",
    "webassembly"
  ],
  "author": "AkingSPICE Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/numeric": "^1.2.6",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^30.2.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.0",
    "typescript": "^5.4.5",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@bluemath/linalg": "^0.2.2",
    "ml-matrix": "^6.10.0",
    "numeric": "^1.2.6"
  }
}
