  "description": "JavaScript Solver for Power Electronics - A high-performance circuit simulator for power electronic circuits",
  "main": "lib-dist/AkingSPICE.umd.js",
  "module": "lib-dist/AkingSPICE.es.js",
  "exports": {
    ".": {
      "import": "./lib-dist/AkingSPICE.es.js",
      "require": "./lib-dist/AkingSPICE.umd.js"
    }
  },
  "files": [
    "lib-dist",
    "src",
    "README.md",
    "AI-USAGE-GUIDE.md",
    "AI-QUICK-REFERENCE.md"
  ],
  "type": "module",
  "scripts": {
    "test": "node test/run-tests.js",
    "test:watch": "node --watch test/run-tests.js",
    "example": "node examples/simple-rc.js",
